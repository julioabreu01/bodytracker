



<%= form_with model: @paciente, local: true do |form| %>

<div class="panel panel-default">
<div class="panel-heading">
  <div class="btn-group pull-right">
    <p>
    <%= form.submit "Salvar", :class => "btn btn-success" %> 
    <%= link_to "Cancelar", pacientes_path, :class => "btn btn-danger" %>
    </p>
    </div><!-- /.btn-group -->
<h4>Paciente</h4>
</div>
<!-- /.panel-heading -->
<div class="panel-body">


<% if @paciente.errors.any?  %>

    <div class="alert alert-danger">
    
      <h4>
        <%= pluralize(@paciente.errors.count, "erro") %> impede(m) este paciente de ser salvo
      </h4>
      <ul>
        <% @paciente.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  
  <div class="col-lg-6">
  
    <div class="form-group">
      <%= form.label :nome %><br>
      <%= form.text_field :nome, :class=> "form-control", :placeholder=>"Nome completo do paciente" %>
    </div>
  </div>
 <div class="col-lg-6">
  
     <div class="form-group">
      <%= form.label :nascimento %><br>
      <%= form.date_field :nascimento, :class=> "form-control" %>
    </div>
  </div>
</div>


<div class="row">
  
  <div class="col-lg-6">
  
    <div class="form-group">
      <%= form.label :altura %><br>
      <%= form.text_field :altura, :class=> "form-control", :placeholder=>"Altura em cm" %>
    </div>
  </div>
  <div class="col-lg-6">
  
    <div class="form-group">
      <%= form.label :email %><br>
      <%= form.email_field :email, :class=> "form-control", :placeholder=>"exemplo@gmail.com" %>
    </div>
  </div>
</div>

<div class="row">
  
  <div class="col-lg-6">
  
    <div class="form-group">
      <%= form.label :telefone %><br>
      <%= form.text_field :telefone, :class=> "form-control", :placeholder=>"(11) 9999-9999" %>
    </div>
  </div>
 <div class="col-lg-6">
  
     <div class="form-group">
      <%= form.label :whatsapp %><br>
      <%= form.text_field :whatsapp, :class=> "form-control", :placeholder=>"(11) 9999-9999" %>
    </div>
  </div>
</div>



<div class="row">

 <div class="col-lg-6">
  
     <div class="form-group">
        <%= form.label :genero %><br>
        <div class="radio">
        <label>
        <%= form.radio_button :genero, 'Masculino' %> 
        Masculino
        </label>
        </div>
        <div class="radio">
        <label>
        <%= form.radio_button :genero, 'Feminino' , :checked => true%>
        Feminino
        </label>
        </div>
    </div>
  </div>
 
 <div class="col-lg-6">
  
     <div class="form-group">
        <%= form.label :nivelatividade, 'Nivel de Atividade Física' %><br>
        <div class="radio">
        <label>
        <%= form.radio_button :nivelatividade, '1' %> 
        Nível 1
        </label>
        </div>
        <div class="radio">
        <label>
        <%= form.radio_button :nivelatividade, '2' %> 
        Nível 2
        </label>
        </div>
        <div class="radio">
        <label>
        <%= form.radio_button :nivelatividade, '3' %> 
        Nível 3
        </label>
        </div>
    </div>
  </div>


</div>
  
    <div class="form-group">
      <%= form.label :notas %><br>
      <%= form.text_area :notas, :class=> "form-control", :rows=>10 %>
    </div>


</div>
    <!-- /.panel-body -->
<div class="panel-footer">
  <div class="btn-group pull-right">
    <p>
    <%= form.submit "Salvar", :class => "btn btn-success" %> 
    <%= link_to "Cancelar", pacientes_path, :class => "btn btn-danger" %>
    </p>
    </div><!-- /.btn-group -->
<h4></h4>
</div>
<!-- /.panel-footer -->


</div>
<!-- /.panel -->
<% end %>
